<Window x:Class="WPFVoicemeeterDiscord.ServerSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Server" Height="200" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="ServerListBox" Grid.Row="0"/>
        <Button x:Name="SelectButton" Content="Select" Grid.Row="1" HorizontalAlignment="Right" Margin="0,10,0,0" Click="SelectButton_Click"/>
    </Grid>
</Window>
